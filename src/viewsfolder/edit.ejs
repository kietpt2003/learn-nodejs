<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Update User</title>
</head>

<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/create">Create Users</a>
    </div>
    <div class="form-add-new">
        <form action="/create-user" method="post">
            <fieldset>
                <legend>Update a user</legend>
                <div class="input-group">
                    <label>Email: </label>
                    <input type="text" name="mail" value="<%= user.email %>" />
                </div>
                <div class="input-group">
                    <label>Name: </label>
                    <input type="text" name="myName" value="<%= user.name %>" />
                </div>
                <div class="input-group">
                    <label>City: </label>
                    <input type="text" name="myCity" value="<%= user.city %>" />
                </div>
                <div>
                    <button>Save</button>
                </div>
            </fieldset>
        </form>
    </div>
</body>

</html>